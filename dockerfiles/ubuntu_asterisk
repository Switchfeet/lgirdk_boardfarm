    ln -s /data/home/asterisk /home/asterisk && \
    ln -s /data/var/lib/asterisk /var/lib/asterisk && \
    ln -s /data/var/run/asterisk /var/run/asterisk && \
    ln -s /data/var/spool/asterisk /var/spool/asterisk && \
