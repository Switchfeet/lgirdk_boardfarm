    php-pear=1:1.10.9+submodules+notgz-1ubuntu0.20.04.3 \
    composer=1.10.1-1 \
    flite=2.1-release-3 \
    sox=14.4.2+git20190427-2 \
    mpg123=1.25.13-1 \
    ffmpeg=7:4.2.7-0ubuntu0.1 \
    unixodbc=2.3.6-0.1build1 \
