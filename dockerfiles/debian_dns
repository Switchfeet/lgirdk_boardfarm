    iproute2=4.20.0-2+deb10u1 \
    iptables=1.8.2-4 \
    net-tools=1.60+git20180626.aebd88e-1 \
    tcpdump=4.9.3-1~deb10u2 \
    traceroute=1:2.1.0-2 \
    && rm -rf /var/lib/apt/lists/*
